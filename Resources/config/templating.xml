    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

  <parameters>
      <parameter key="templating.helper.simple_paginator.class">Ideup\SimplePaginatorBundle\Templating\Helper\PagebarHelper</parameter>
  </parameters>

  <services>
      <service id="templating.helper.ideup.simple_paginator" class="%templating.helper.simple_paginator.class%">
          <tag name="templating.helper" alias="pagination_helper" />
		  <argument type="service" id="ideup.simple_paginator" />
